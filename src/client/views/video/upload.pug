extends ../layout

block content

	//- div
	//- 	button#startBtn Start Record

	section.preview 
		h5 Preview
		article.preview__part 
			h6.preview__part-title Video
			video#previewVideo.preview__part-media
		article.preview__part 
			h6.preview__part-title Thumbnail
			image#previewThumb.preview__part-media

	section.form
		h5 Information

		form(method="POST" enctype="multipart/form-data")
			ul
				li 
					label(for="video") Video File
					input(type="file", accept="video/*" required id="video" name="video")
				li 
					label Title
					input(name="title" required maxlength=80)
				li 
					label Description
					textarea(name="description" required minlength=20)
				li 
					label Hashtags(separated by comma)
					input(name="hashtags" required)
			input(type="submit", value="Upload")

block scripts
	script(src="/static/js/recorder.js") 