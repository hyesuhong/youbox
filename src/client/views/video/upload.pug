extends ../layout

block content

	section.preview 
		h5 Preview
		article.preview__part 
			h6.preview__part-title Video
			video#previewVideo.preview__part-media(loop muted autoplay)
		article.preview__part 
			h6.preview__part-title Thumbnail
			image#previewThumb.preview__part-media

	section.form
		h5 Information

		form(method="POST" enctype="multipart/form-data")
			ul
				li 
					p Video File
					input(type="text" id="videoFileName" placeholder="Select video first" readonly)
					label(for="video") Upload video
					input(type="file", accept="video/*" required id="video" name="video")
				li 
					p Thumbnail File
					input(type="text" id="thumbFileName" placeholder="Select thumbnail first" readonly)
					label(for="thumbnail") Upload thumbnail
					input(type="file", accept="image/*" required id="thumbnail" name="thumbnail")
				li 
					p Title
					input(name="title" required maxlength=80)
				li 
					p Description
					textarea(name="description" required minlength=20)
				li 
					p Hashtags(separated by comma)
					input(name="hashtags" required)
			input(type="submit", value="Upload")

block scripts
	script(src="/static/js/upload.js")